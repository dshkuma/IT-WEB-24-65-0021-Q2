@page
@model StudentInfoWebApp.Pages.Students.CreateModel

<h2>Add Student</h2>

<form method="post">
    <label>Name</label>
    <input asp-for="Student.Name" class="form-control" />
    <br />

    <label>City</label>
    <input asp-for="Student.City" class="form-control" />
    <br />

    <label>Course</label>
    <select asp-for="Student.CourseId" asp-items="Model.CourseList" class="form-control"></select>
    <br />

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
